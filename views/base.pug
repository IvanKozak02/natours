doctype html
html
    head
        block head
            meta(http-equiv="Content-Security-Policy" content="default-src * 'unsafe-inline' 'unsafe-eval' 'self'; script-src * 'unsafe-inline' 'unsafe-eval' blob:; img-src * 'self' data: blob:;")
            link(rel='stylesheet' href=`/css/style.css`)
            link(rel='shortcut icon' type='image/png' href='/img/favicon.png')
            meta(charset="UTF-8")
            meta(name="viewport", content="width=device-width, initial-scale=1.0")
            link(href="https://fonts.googleapis.com/css?family=Lato:300,300i,700" rel="stylesheet")
            title Natours | #{title}
    body
        // That way we can include other templates in this template
        include _header
        // This block we can change in templates that extend this template
        block content
            h1 This is base template content
        include _footer
        script(src="/js/bundle.js")
        script(src="https://js.stripe.com/v3/")


